<div class="page-header">
  <h1>
    Search by Neighborhood
  </h1>
  <% @neighborhoods.each do |neighborhood| %>
  <a href="/neighborhoods/<%= neighborhood %>" class="btn btn-success"><%= neighborhood %></a>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">


    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Comment</th>
      </tr>

      <% @n_places.each do |place| %>
      <tr>
        <td><a href = "/places/<%= place.id %>"><%= place.name %></a></td>
        <td><%= place.address %></td>
        <td><%= place.comment %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
