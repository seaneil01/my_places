<div class="page-header">
  <h1>
    Taggeds
    <a href="/taggeds/new" class="btn btn-lg btn-success">New Tagged</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Place</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @taggeds.each do |tagged| %>
      <tr>
        <%if current_user.id == tagged.place.user_id  %>
        <td><%= tagged.place.name %></td>
        <td><%= tagged.tag.name %></td>
        <td>
          <a href="/taggeds/<%= tagged.id %>" class="btn btn-primary">Show</a>
          <a href="/taggeds/<%= tagged.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_tagged/<%= tagged.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        <%else %>
        <%end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
